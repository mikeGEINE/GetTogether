<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :name, t('.name'), class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :surname,t('.surname'), class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :surname, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :mail,t('.mail'), class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.email_field :mail, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :password, t('.password'), class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.password_field :password, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :password_confirmation, t('.password_confirm'), class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :avatar, t('.avatar'), class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.file_field :avatar%>
    </div>
    
  </div>

  <div class="actions">
    <%= form.submit t('.submit'), class: 'btn btn-primary my-1' %>
  </div>
<% end %>

